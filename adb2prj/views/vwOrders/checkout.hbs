                                    <h4 class="panel-title"><i class="fa fa-shopping-cart"></i> Shopping cart</h4>
                                </div>
                                <div class="panel-body" >
                                    <div class="table-responsive">
                                        <table class="table table-bordered">
                                            <thead>
                                            <tr>
                                                <td class="text-center">Image</td>
                                                <td class="text-left">Product ID</td>
                                                <td class="text-left">Product Name</td>
                                                <td class="text-left">Quantity</td>
                                                <td class="text-right">Unit Price</td>
                                                <td class="text-right">Total</td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {{#each products}}
                                            <form action="/checkout/update" method="post">
                                                <tr>
                                                    <td class="text-center"><a href="#"><img width="60px" src="/assets/Customer/image/demo/shop/product/E4.jpg" alt="Xitefun Causal Wear Fancy Shoes" title="Xitefun Causal Wear Fancy Shoes" class="img-thumbnail"></a></td>
                                                    <td class="text-left" ><a href="#" >{{productsItem.proID}}</a></td>
                                                    <td class="text-left" id="name" name="name"><a href="#" >{{productsItem.name}}</a></td>
                                                    <td class="text-left">

                                                        <div class="input-group btn-block" style="min-width: 50px;">
                                                                <input style="display: none;" type="text" value="{{productsItem.proID}}" id="proID" name="proID" class="form-control">

                                                                <input type="number" value="{{productsItem.quantity}}" size="1" id="quantity" name="quantity" class="form-control">
                                                                <div class="input-group-btn">
                                                                    <button type="submit" class="btn btn-primary"><i class="fa fa-refresh" aria-hidden="true"></i></button>

                                                                    <button class="btn btn-danger" formmethod="get" formaction="/checkout/delete?proID={{productsItem.proID}}">
                                                                        <i class="fa fa-times-circle" aria-hidden="true"></i></button>
                                                                </div>
                                                        </div>
                                                    </td>
                                                    <td class="text-right">{{productsItem.price}}</td>
                                                    <td class="text-right">{{productsItem.total}}</td>
                                                </tr>
                                            </form>

                                            {{/each}}

                                            </tbody>
